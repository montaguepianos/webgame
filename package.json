{
  "name": "melody-dash",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": "^20.0.0"
  },
  "scripts": {
    "husky:install": "husky install",
    "setup": "pnpm install && pnpm run husky:install",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm run lint:eslint && pnpm run lint:markdown",
    "lint:eslint": "pnpm exec eslint .",
    "lint:markdown": "pnpm exec markdownlint \"**/*.md\"",
    "format": "pnpm exec prettier \"**/*.{ts,tsx,js,json,md,css,html}\" --write",
    "format:check": "pnpm exec prettier \"**/*.{ts,tsx,js,json,md,css,html}\" --check",
    "ci": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build",
    "start": "pnpm --filter server start"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@types/node": "^20.11.30",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.0",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "volta": {
    "node": "20.19.5"
  }
}
